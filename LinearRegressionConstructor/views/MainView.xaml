<Window x:Class="LinearRegressionConstructor.views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinearRegressionConstructor.views"
        MinHeight="250"
        MinWidth="1100"
        mc:Ignorable="d"
        Title="Linear Regression" Height="450" Width="1000">
    <Window.Resources>
        <Style x:Key="bttnStyle">
            <Setter Property="Control.Width" Value="100"/>
            <Setter Property="Control.Height" Value="30"/>
            <Setter Property="Control.Background" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="31.04"/>
        </Grid.RowDefinitions>

        <Menu Height="30"
              VerticalAlignment="Center"
              Background="White">
            <MenuItem Header="Открыть файл" Command="{Binding Open}" Height="30"/>
            <MenuItem Header="Опции" Command="{Binding Settings}" Height="30"/>
        </Menu>
        <Button Content="Вывести регрессионное уравнение" Style="{StaticResource bttnStyle}" VerticalAlignment="Bottom" Command="{Binding Calculate}" IsEnabled="{Binding IsCalcReady}" Width="NaN" Margin="10,0,868,297" Height="42" Grid.Row="1" Click="Button_Click"/>
        <TextBlock Text="{Binding Equation, UpdateSourceTrigger=PropertyChanged}" FontSize="24" DockPanel.Dock="Right" Margin="250,4,10,297" Grid.Row="1"/>
        <TextBlock Name="Res" Text="{Binding ModelInfo, UpdateSourceTrigger=PropertyChanged}"
                       FontSize="16"
                       DockPanel.Dock="Top"
                       HorizontalAlignment="Left" Width="834" RenderTransformOrigin="0.5,0.5" Margin="250,81,0,10" Grid.Row="1">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Label Content="Значение параметра:" Margin="10,245,900,74" Grid.Row="1" />
        <Label Name="ValPar" Content="0" Margin="134,245,855,74" Grid.Row="1" />
        <ComboBox Name="choseParamList" Height="30" VerticalAlignment="Top" Margin="10,157,868,0" Grid.Row="1" SelectionChanged="choseParamList_SelectionChanged"></ComboBox>
        <Slider Value="0" Minimum="0" Maximum="100" SelectionStart="0" 
        IsSelectionRangeEnabled="True" Margin="10,205,868,110" Grid.Row="1" ValueChanged="Slider_ValueChanged" />
        <Label Content="{Binding Status}"
               Grid.Row="2"
               HorizontalAlignment="Center" Margin="0,2,0,-2" Width="10"/>
        <TextBlock Text="{Binding CurrentCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       FontSize="16"
                       HorizontalAlignment="Left" Width="270" RenderTransformOrigin="0.5,0.5" Margin="258,3,0,6">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.067"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button Content="Обновить&#xD;&#xA;" Margin="10,107,979,221" Grid.Row="1" Click="Button_Click_1"
                Command="{Binding zal}"/>
        <Button Content="Запуск&#xD;&#xA;" Margin="10,286,868,37" Grid.Row="1" Click="Button_Click_2"/>
    </Grid>
</Window>
